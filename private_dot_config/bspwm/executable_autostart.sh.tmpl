#!/usr/bin/env bash

run() {
    if ! pgrep $1 ; then
        $@&
    fi
}

# Daemonize compton
run compton -c --backend glx --vsync opengl-swc --blur-background

run bitcoin -min
run "/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1"
gnome-keyring-daemon -r -d

# email
run protonmail-bridge --no-window

run nextcloud

{{- if eq .computer_type "laptop" }}
# Wifi applet
run nm-applet
{{- else}}
# keyboard software
run ckb-next --background
{{- end }}

# Blue light filter
run redshift

run safeeyes

# Device manager
run udiskie

run "numlockx on"

run gpg-agent

# set background
run feh --bg-scale $HOME/.config/polybar/wallpapers/default

exit 0
